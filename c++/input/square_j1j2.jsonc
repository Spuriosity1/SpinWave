{
"material": "squarej1j2",

"lattice vectors" : [
    [1,0,0],
    [0,1,0],
    [0,0,1]
],

"magnetic vectors" : [
    [1,0,0],
    [0,1,0],
    [0,0,1]
],

// choice of either 'lattice' or 'cartesian', indicates basis with respect to which site vectors are written
"site_basis": "lattice",

// All of the atoms in the unit cell.
"sites": [
    {
        "name": "a",
        "xyz": [0,0,0],
        "gs_vector": [0,0,1]
    },
    {
        "name": "b",
        "xyz": [1,0,0],
        "gs_vector": [0,0,1]
    },
    {
        "name": "c",
        "xyz": [0,-1,0],
        "gs_vector": [0,0,1]
    },
    {
        "name": "d",
        "xyz": [1,-1,0],
        "gs_vector": [0,0,1]
    }
],

"couplings": {
    "J1": {
        "matrix": [
            [1,0,0],
            [0,1,0],
            [0,0,1]
        ],
        "strength": 1,

        "bonds": [
// celldelta specifies the unit cell that "to" belongs to, relative to "a".
// double counting will cause parsing to fail.
// celldelta = fromcell - tocell
// This syntax is admittedly cumbersome, but that's kind of the point: a more elegant 
// representation is also more opaque.
            {"from": "a", "to": "b", "celldelta": [ 0, 0, 0]},
            {"from": "a", "to": "b", "celldelta": [-1, 0, 0]},
            {"from": "c", "to": "d", "celldelta": [ 0, 0, 0]},
            {"from": "c", "to": "d", "celldelta": [-1, 0, 0]},
            {"from": "a", "to": "c", "celldelta": [ 0, 0, 0]},
            {"from": "a", "to": "c", "celldelta": [ 0, 1, 0]},
            {"from": "b", "to": "d", "celldelta": [ 0, 0, 0]},
            {"from": "b", "to": "d", "celldelta": [ 0, 1, 0]}
        ]
    },

    "J2": {
        "matrix": [
            [1,0,0],
            [0,1,0],
            [0,0,1]
        ],
        "strength": 1,

        "bonds": [
            {"from": "a", "to": "d", "celldelta": [ 0, 0, 0]},
            {"from": "a", "to": "d", "celldelta": [-1, 0, 0]},
            {"from": "a", "to": "d", "celldelta": [-1, 1, 0]},
            {"from": "a", "to": "d", "celldelta": [ 0, 1, 0]},
            {"from": "b", "to": "c", "celldelta": [ 0, 0, 0]},
            {"from": "b", "to": "c", "celldelta": [ 0, 1, 0]},
            {"from": "b", "to": "c", "celldelta": [-1, 0, 0]},
            {"from": "b", "to": "c", "celldelta": [-1, 1, 0]}
        ]
    }

    // "KitaevZ": {
    //     "matrix": [
    //         [0,0,0],
    //         [0,0,0],
    //         [0,0,1]
    //     ],
    //     "strength": 1,
    //     "bonds": [
    //         {"from": "a", "to": "d", "celldelta": [ 0, 0, 0]}
    //     ]
    // }
}

}